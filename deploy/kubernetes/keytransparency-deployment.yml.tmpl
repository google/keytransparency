---
apiVersion: apps/v1beta1
kind: Deployment
metadata:
  name: kt-server
spec:
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        run: kt-server
    spec:
      volumes:
      - name: secrets-volume
        secret:
          secretName: kt-secrets
      containers:
      - name: kt-server
        image: us.gcr.io/key-transparency/keytransparency-server
        imagePullPolicy: Always
        volumeMounts:
        - name: secrets-volume
          readOnly: true
          mountPath: "/kt-secrets"
        ports:
          - containerPort: 8080
            name: json-grpc
          - containerPort: 8081
            name: metrics
        args: ["--addr=0.0.0.0.:8080",
               "--db=test:zaphod@tcp(mysql:3306)/test",
               "--log-id=$LOG_ID",
               "--log-url=trillian-log:8090",
               "--map-id=$MAP_ID",
               "--map-url=trillian-map:8090",
               "--vrf=/kt-secrets/vrf-key.pem",
               "--tls-key=/kt-secrets/server.key",
               "--tls-cert=/kt-secrets/server.crt",
               "--alsologtostderr",
               "--v=5"]
      initContainers:
      - name: init-trillian-map
        image: radial/busyboxplus
        command: ['sh', '-c', "until curl  http://trillian-map:8091/v1beta1/trees; do echo 'waiting'; sleep 5; done"]
---
apiVersion: v1
kind: Service
metadata:
  name: kt-server-external
  labels:
    run: kt-server-external
spec:
  type: LoadBalancer
  loadBalancerIP: 35.184.134.53
  ports:
    - port: 8080
      targetPort: 8080
      name: json-grpc
  selector:
    run: kt-server
---
apiVersion: v1
kind: Service
metadata:
  name: kt-server
  labels:
    run: kt-server
spec:
  type: NodePort
  ports:
    - port: 8081
      targetPort: 8081
      name: metrics
  selector:
    run: kt-server
---
---
apiVersion: apps/v1beta1
kind: Deployment
metadata:
  name: kt-signer
spec:
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        run: kt-signer
    spec:
      containers:
      - name: kt-signer
        image: us.gcr.io/key-transparency/keytransparency-signer
        imagePullPolicy: Always
        ports:
          - containerPort: 8080
            name: json-grpc
        args: ["--db=test:zaphod@tcp(mysql:3306)/test",
               "--log-id=$LOG_ID",
               "--log-url=trillian-log:8090",
               "--map-id=$MAP_ID",
               "--map-url=trillian-map:8090",
               "--min-period=5s",
               "--max-period=12h",
               "--alsologtostderr",
               "--v=5"]
---
apiVersion: v1
kind: Service
metadata:
  name: kt-signer
  labels:
    run: kt-signer
spec:
  type: NodePort
  ports:
    - port: 8081
      targetPort: 8081
      name: metrics
  selector:
    run: kt-signer
---
apiVersion: v1
kind: Service
metadata:
  name: prometheus
  labels:
    run: prometheus
spec:
  type: LoadBalancer
  loadBalancerIP: 35.184.145.242
  ports:
    - port: 9090
      targetPort: 9090
      name: prometheus
  selector:
    run: prometheus
---
apiVersion: apps/v1beta1
kind: Deployment
metadata:
  name: prometheus
spec:
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        run: prometheus
    spec:
      containers:
      - name: prometheus
        image: us.gcr.io/key-transparency/prometheus
        imagePullPolicy: Always
        ports:
          - containerPort: 9090
            name: prometheus